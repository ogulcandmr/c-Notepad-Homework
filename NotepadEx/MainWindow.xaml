<Window x:Class="NotepadEx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:NotepadEx"
        xmlns:behaviors="clr-namespace:NotepadEx.MVVM.Behaviors"
        xmlns:UserControls="clr-namespace:NotepadEx.MVVM.View.UserControls"
        xmlns:Converters="clr-namespace:NotepadEx.Converters"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="NotepadEx" 
        Height="450" 
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Background="Transparent">

    <b:Interaction.Behaviors>
        <behaviors:WindowMouseMoveBehavior 
            MouseMoveCommand="{Binding MouseMoveCommand}"
            ResizeCommand="{Binding ResizeCommand}"/>
    </b:Interaction.Behaviors>

    <Window.Resources>
        <Converters:StringEqualityMultiConverter x:Key="StringEqualityMultiConverter"/>
    </Window.Resources>

    <Grid>
        <Border BorderThickness="2" 
                BorderBrush="{DynamicResource Color_BorderColor}" 
                CornerRadius="1" 
                Background="Transparent">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <UserControls:CustomTitleBar Grid.Row="0" DataContext="{Binding TitleBarViewModel}"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{Binding MenuBarHeight}"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="{Binding InfoBarHeight}"/>
                    </Grid.RowDefinitions>

                    <Menu IsMainMenu="True" 
                          Grid.Row="0"
                          Background="{DynamicResource Color_MenuBarBg}"
                          IsEnabled="{Binding IsMenuBarEnabled}">
                        <MenuItem Name="MenuItemFileDropDown" Header="File" Foreground="{DynamicResource Color_MenuItemFg}">
                            <MenuItem Header="New" 
                                    Command="{Binding NewCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Open..." 
                                    Command="{Binding OpenCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>

                            <MenuItem Name="MenuItem_OpenRecent"  
                                    Header="Open Recent" 
                                    Foreground="{DynamicResource Color_MenuItemFg}">
                                <b:Interaction.Behaviors>
                                    <behaviors:MenuItemBehavior 
                                        ClickCommand="{Binding OpenRecentCommand}"/>
                                </b:Interaction.Behaviors>
                                <MenuItem Header="..." Foreground="{DynamicResource Color_MenuItemFg}"/>
                            </MenuItem>

                            <MenuItem Header="Save" 
                                    Command="{Binding SaveCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Save As..." 
                                    Command="{Binding SaveAsCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Print..." 
                                    Command="{Binding PrintCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Open Current File Location..." 
                                    Command="{Binding OpenFileLocationCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Exit" 
                                    Command="{Binding ExitCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                        </MenuItem>

                        <MenuItem Header="Edit" Foreground="{DynamicResource Color_MenuItemFg}">
                            <MenuItem Header="Find and Replace..." Command="{Binding OpenFindReplaceCommand}" Foreground="{DynamicResource Color_MenuItemFg}"/>

                            <MenuItem Header="Copy" 
                                    Command="{Binding CopyCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Cut" 
                                    Command="{Binding CutCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Paste" 
                                    Command="{Binding PasteCommand}"
                                    Foreground="{DynamicResource Color_MenuItemFg}"/>
                        </MenuItem>

                        <MenuItem Header="Preferences" Foreground="{DynamicResource Color_MenuItemFg}">
                            <MenuItem Header="Font Editor..." Command="{Binding OpenFontEditorCommand}" Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <Separator/>
                            <MenuItem Header="Toggle Word Wrapping" 
                                      Command="{Binding ToggleWordWrapCommand}"
                                      IsChecked="{Binding IsWordWrapEnabled}"
                                      Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Show Line Numbers"
                                      IsCheckable="True"
                                      IsChecked="{Binding ShowLineNumbers, Mode=TwoWay}"
                                      Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <MenuItem Header="Show Info Bar" 
                                      Command="{Binding ToggleInfoBarCommand}"
                                      IsChecked="{Binding IsInfoBarVisible}"
                                      Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <Separator/>
                            <MenuItem Header="Syntax Highlighting" ItemsSource="{Binding AvailableSyntaxHighlightings}" Foreground="{DynamicResource Color_MenuItemFg}">
                                <MenuItem.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <Setter Property="Header" Value="{Binding Name}" />
                                        <Setter Property="Command" Value="{Binding DataContext.ChangeSyntaxHighlightingCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                                        <Setter Property="CommandParameter" Value="{Binding}" />
                                        <Setter Property="Foreground" Value="{DynamicResource Color_MenuItemFg}" />
                                        <Setter Property="IsChecked">
                                            <Setter.Value>
                                                <MultiBinding Converter="{StaticResource StringEqualityMultiConverter}" Mode="OneWay">
                                                    <Binding Path="Name" />
                                                    <Binding Path="DataContext.CurrentSyntaxHighlighting.Name" RelativeSource="{RelativeSource AncestorType=Window}" FallbackValue="None / Plain Text"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <!-- The name "ASP/XHTML" is just the first one alphabetically. This trigger will correctly target the first item after "None". -->
                                            <DataTrigger Binding="{Binding Name}" Value="ASP/XHTML">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="MenuItem">
                                                            <StackPanel>
                                                                <Separator Margin="0,0,0,5" />
                                                                <Border x:Name="templateRoot" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" SnapsToDevicePixels="true" Height="22">
                                                                    <!-- THIS MARGIN IS THE FIX: It simulates the indentation from the default template's icon column. -->
                                                                    <Grid>
                                                                        <ContentPresenter ContentSource="Header" Margin="30,0,0,0" VerticalAlignment="Center" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                                    </Grid>
                                                                </Border>
                                                            </StackPanel>
                                                            <ControlTemplate.Triggers>
                                                                <!-- We must re-implement the highlight trigger because we replaced the template. -->
                                                                <Trigger Property="IsHighlighted" Value="True">
                                                                    <Setter TargetName="templateRoot" Property="Background" Value="{DynamicResource Color_MenuItemHighlightBg}"/>
                                                                    <Setter TargetName="templateRoot" Property="BorderBrush" Value="{DynamicResource Color_MenuItemHighlightBorder}"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </MenuItem.ItemContainerStyle>
                            </MenuItem>
                        </MenuItem>

                        <MenuItem Header="Theme" Foreground="{DynamicResource Color_MenuItemFg}">
                            <MenuItem.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </MenuItem.ItemsPanel>

                            <MenuItem Header="Theme Editor..." Command="{Binding OpenThemeEditorCommand}" Foreground="{DynamicResource Color_MenuItemFg}"/>
                            <Separator/>
                            <MenuItem Header="Themes" ItemsSource="{Binding AvailableThemes}">
                                <MenuItem.ItemTemplate>
                                    <DataTemplate>
                                        <MenuItem Header="{Binding Name}"
                                                  Command="{Binding DataContext.ChangeThemeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}"
                                                  Foreground="{DynamicResource Color_MenuItemFg}">
                                            <MenuItem.IsChecked>
                                                <MultiBinding Converter="{StaticResource StringEqualityMultiConverter}" Mode="OneWay">
                                                    <Binding Path="Name"/>
                                                    <Binding Path="DataContext.CurrentThemeName" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                </MultiBinding>
                                            </MenuItem.IsChecked>
                                        </MenuItem>
                                    </DataTemplate>
                                </MenuItem.ItemTemplate>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="About" Foreground="{DynamicResource Color_MenuItemFg}">
                            <MenuItem Header="Github.com/Hex-Coded" Foreground="{DynamicResource Color_MenuItemFg}"/>
                        </MenuItem>
                    </Menu>

                    <Grid Grid.Row="1" Background="{DynamicResource Color_TextEditorBg}">
                        <avalonedit:TextEditor
                            Name="textEditor"
                            FontFamily="{DynamicResource Font_Family}"
                            FontSize="{DynamicResource Font_Size}"
                            FontStyle="{DynamicResource Font_Style}"
                            FontWeight="{DynamicResource Font_Weight}"
                            Background="Transparent"
                            Foreground="{DynamicResource Color_TextEditorFg}"
                            
                            SyntaxHighlighting="{Binding CurrentSyntaxHighlighting}"
                            ShowLineNumbers="{Binding ShowLineNumbers}"
                            LineNumbersForeground="{DynamicResource Color_MenuItemFg}"

                            WordWrap="{Binding IsWordWrapEnabled}"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <b:Interaction.Behaviors>
                                <behaviors:AvalonEditBehavior DocumentText="{Binding DocumentContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </b:Interaction.Behaviors>
                        </avalonedit:TextEditor>
                    </Grid>

                    <Grid Grid.Row="2" Background="{DynamicResource Color_InfoBarBg}">
                        <TextBlock  
                               Foreground="{DynamicResource Color_InfoBarFg}"
                               Text="{Binding StatusText}"
                               Margin="4,0,0,0" 
                               FontFamily="Verdana" 
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>